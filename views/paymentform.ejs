
<%- include("./partial/header.ejs") %> 
    <body>
        <div class="main">
            <div class="navbar">
                <h2 class="logo">MediSolution</h2>       
            </div> 

            
            <%- include("./partial/navbar.ejs") %> 
            <div class="eight wide column">


                <table class="ui selectable inverted table" style="opacity:  0.95;">
                    <thead>
                        <tr>
                            <th colspan="3" style="text-align: center;">
                                Make Payment
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="collapsing">
                              Your current balance:
                            </td>
                            <td>
                                $<%= data.currentAmount %>
                            </td>
                            <!-- <td class="right aligned collapsing"><a>Edit</a></td> -->
                        </tr>
                        <tr>
                            <td class="collapsing">
                                Enter amount:
                            </td>
                            <td>
                                <form action="/paymentform" method="post">
                                    <input type="number" min="0" step="0.01" name="amount" required>
                                    <button class="ui button">Proceed</button>
                                </form>
                            </td>
                            
                        </tr>

                    </tbody>
                </table>



            </div>
        </div>
    </body>
</html>